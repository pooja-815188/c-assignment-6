#include <stdio.h>
int main()
{
    int num, count, i;
    printf("Enter any number: ");
    scanf("%d", &num);
    count = 0;
    for(i=0; i<num; i++)
    {
        if((num >> i ) & 1)
        {
            break;
        }
        count++;
    }

printf("Total numb of trailing zeros in %d is %d.", num, count);
}
